<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.phenoapps.verify">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="org.phenoapps.verify.MainActivity"
            android:configChanges="keyboardHidden|screenSize|keyboard"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.phenoapps.verify.ScanActivity" />

        <activity android:name="org.phenoapps.verify.LoaderDBActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|keyboard"/>

        <activity android:name="org.phenoapps.verify.SettingsActivity" />

        <activity android:name="org.phenoapps.verify.IntroActivity"
            android:theme = "@style/AppThemeNoActionBar"/>
    </application>

</manifest>